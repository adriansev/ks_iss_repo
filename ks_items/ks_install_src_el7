
# Install from an installation tree on a remote server
install
nfs --server=monitor.spacescience.ro --dir=/centos7/
##url --url=http://monitor.spacescience.ro/mirrors/centos/7/os/x86_64/

## Add basic repositories for os and updates
repo --name=base    --baseurl=http://monitor.spacescience.ro/mirrors/centos/7/os/x86_64/
repo --name=updates --baseurl=http://monitor.spacescience.ro/mirrors/centos/7/updates/x86_64/
repo --name=epel    --baseurl=http://monitor.spacescience.ro/mirrors/epel/7/x86_64/
