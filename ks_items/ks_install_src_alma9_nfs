
# Install from an installation tree on a remote server
nfs --server=monitor.spacescience.ro --dir=/alma9/

## Add basic repositories for os and updates
repo --name=BaseOS    --baseurl=http://monitor.spacescience.ro/mirrors/almalinux/9/BaseOS/x86_64/os/
repo --name=AppStream --baseurl=http://monitor.spacescience.ro/mirrors/almalinux/9/AppStream/x86_64/os/
repo --name=CRB       --baseurl=http://monitor.spacescience.ro/mirrors/almalinux/9/CRB/x86_64/os/

