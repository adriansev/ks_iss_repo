timedatectl set-local-rtc 0
timedatectl set-timezone Europe/Bucharest

## Configure chrony
echo "Configure chrony"
mv /etc/chrony.conf /etc/chrony.conf.ini_install
cat << EOF >> /etc/chrony.conf
server monitor.spacescience.ro iburst prefer
server 85.120.46.1 iburst
pool 0.ro.pool.ntp.org iburst

stratumweight 0.01
driftfile /var/lib/chrony/drift
rtconutc
rtcsync

# allow clock step at every update if the difference is > 0.1s
makestep 0.1 -1

# operate strictly in a client-only mode
port 0

# disable chronyc access from the Internet
cmdport 0

keyfile /etc/chrony.keys

noclientlog
logchange 2
logdir /var/log/chrony

EOF
echo

systemctl enable chronyd
systemctl restart chronyd
timedatectl set-ntp true

